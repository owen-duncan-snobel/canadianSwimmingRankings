// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets =  ["native", "darwin-arm64", "linux-musl", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl =  env("SHADOW_DATABASE_URL")
}

model Users {
  id         Int     @id
  first_name String
  last_name String
}

// Athletes from swimrankings
model Athletes { 
  id            Int    @default(autoincrement())
  first_name    String
  last_name     String
  birth_year    Int
  nation        String
  club          String
  athlete_id    Int     @id
  gender        String
  best_times BestTimes[] @relation()
}

model BestTimes {
  event     String
  course    String
  time      String
  points    Int?
  date      DateTime
  location  String
  meet_name String
  athlete Athletes @relation(fields: [athlete_id], references: [athlete_id])
  athlete_id Int
  @@id([athlete_id, event, course])
}